<h2>Books search for <%= range = params[:word] %> </h2>
<table class = "table table-hover table-inverse" >
  <tbody>
    <tr>
      <td></td>
      <td>Title</td>
      <td>Opinion</td>
    </tr>
    <% books.each do |book| %>
     <tr>
       <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
       <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
  </tbody>
</table>